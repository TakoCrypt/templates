root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 4

[{Makefile,*.mk}]
indent_style = tab

[*.nix]
indent_style = space
tab_width = 2
indent_size = 2

[*.lock]
indent_style = unset
insert_final_newline = unset
